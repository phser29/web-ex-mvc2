<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>web-Ex</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
 <!-- JSP file Mapping -->
	<servlet>
		<servlet-name>index</servlet-name>
		<jsp-file>/index.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>header</servlet-name>
		<jsp-file>/header.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>header</servlet-name>
		<url-pattern>/header</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>footer</servlet-name>
		<jsp-file>/footer.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>footer</servlet-name>
		<url-pattern>/footer</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>mypage</servlet-name>
		<jsp-file>/mypage.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>mypage</servlet-name>
		<url-pattern>/mypage</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>joinForm</servlet-name>
		<jsp-file>/joinForm.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>joinForm</servlet-name>
		<url-pattern>/join</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>joinFormAction</servlet-name>
		<servlet-class>user.controller.JoinFormAction</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>joinFormAction</servlet-name>
		<url-pattern>/joinForm</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>loginForm</servlet-name>
		<jsp-file>loginForm.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>loginForm</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>loginFormAction</servlet-name>
		<servlet-class>user.controller.LoginFormAction</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>loginFormAction</servlet-name>
		<url-pattern>/loginForm</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>logoutFormAction</servlet-name>
		<servlet-class>user.controller.LogoutFormAction</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>logoutFormAction</servlet-name>
		<url-pattern>/logoutForm</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>editUserForm</servlet-name>
		<jsp-file>/editUserForm.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>editUserForm</servlet-name>
		<url-pattern>/editUser</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>editUserFormAction</servlet-name>
		<servlet-class>user.controller.EditUserForm</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>editUserFormAction</servlet-name>
		<url-pattern>/editUserForm</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>leaveForm</servlet-name>
		<jsp-file>/leaveForm.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>leaveForm</servlet-name>
		<url-pattern>/leave</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>leaveFormAction</servlet-name>
		<servlet-class>user.controller.LeaveFormAction</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>leaveFormAction</servlet-name>
		<url-pattern>/leaveForm</url-pattern>
	</servlet-mapping>
  
</web-app>